@model Category
<form method="post" asp-action="Edit" style="border:1px solid white" class="mt-4">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Edit Category</h2>
        </div>
        @*<div asp-validation-summary="All" class="mb-3 text-danger"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control mb-3" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control mb-3" />
        </div>
        <button type="submit" class="btn btn-light" style="width:150px;">Edit</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-dark" style="width:150px;">Back To List</a>
    </div>
</form>
@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}

