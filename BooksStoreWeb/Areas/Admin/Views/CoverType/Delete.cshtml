@model CoverType
<form method="post" asp-action="DeleteItem" style="border:1px solid white" class="mt-4">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Cover Type</h2>
        </div>
        @*<div asp-validation-summary="All" class="mb-3 text-danger"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control mb-3" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-dark" style="width:150px;">Back To List</a>
    </div>
</form>
@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}

